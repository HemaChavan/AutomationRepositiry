package test;

public class Constructor {

	int sum ;
	String name; 
	public Constructor() {
		
			System.out.println("hello");
			System.out.println("sum value is :" + sum);
		
		}
	public Constructor(int a ,int b ) {
		
		int c ;
		sum = a+b;
		
	}
	
	public static void main(String args[])
	{
		Constructor constructor = new Constructor();
		Constructor constructor1 = new Constructor(3,4);
		System.out.println("sum value is " +constructor1.sum);
		
	}
	
}

//Constructor is only used for Initialise Objects only
//Using instance variable we can indirectly return the values and display them using the objects
