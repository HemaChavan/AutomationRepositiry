package test;

public class stringmethods {
	public static void main(String args[])
	{
		String s1 = "My name is Hema ";
		
		int i=s1.length();
		System.out.println("string length is " + i);
		
		char s2 = s1.charAt(1);
		System.out.println("char at index 4 is " + s2);
		
		String s3 =s1.substring(0);
		System.out.println("substring is:" + s3);
		
		String s4 = s1.substring(4,12);
		System.out.println("Substring with 2 indexes is :"+s4);
		
		Boolean b1 = s1.contains("name1");
		System.out.println("Substring with contains value is :" +b1);
		
		Boolean b2 = s1.equals("My name is Hema ");
		System.out.println("Substring with Equal value is :" +b2);
		
		String s5 = s1.toUpperCase();
		System.out.println("uppercase value is:" + s5);
		
		String s6 = s1.toLowerCase();
		System.out.println("lowercase value is " + s6);
		
	
		
	}

}
